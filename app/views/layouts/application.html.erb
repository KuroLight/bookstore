<!DOCTYPE html>
<html>
<head>
	<title>Bookworm the World</title>
	<%= stylesheet_link_tag "application" %>
  	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>

<body id="store" >
	<div id="banner" >
		<%= image_tag("logo_apple.png") %>
		<%= @page_title || "The Bookworm" %>
	</div>
	<div id="columns" >
		<div id="side" >      		
			<a href="http://localhost:3000/" >Home</a><br />
			<a href="http://www.google.com.hk" >Questions</a><br />
			<a href="http://www.weibo.com" >News</a><br />
			<a href="mailto:393323546@qq.com" >Contact</a><br />
			<a href="http://my.ss.sysu.edu.cn/wiki/pages/viewpage.action?pageId=35913895" >About Us</a><br />
			
			<% if not session[:user_id] %>
			<%= link_to 'Login', login_path %><br />
			<%= link_to 'Sign up', signup_path %><br />
			
			<br /><br /><a href="/users" >跨越管理员权限查看用户列表，慎用！</a><br />
			<% end %>
			
			<% if session[:user_id] %>
		        <br />
		        <%= link_to 'Orders',   orders_path   %><br />
		        <%= link_to 'Products', products_path %><br />
		        <%= link_to 'Users',    users_path    %><br />
		        <br />		        
		        <a><%= 'Welcome Back! ' + User.find(session[:user_id]).name%></a> 
		        <br />
	        	<%= button_to 'Logout', logout_path, :method => :delete   %>
	      	<% end %>
	      	
			<br />
			<div id="cart">
				<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
	       				<%= render @cart %>
	       			<% end %>
	       		<% end %>
      		</div>
      		
		</div>
		<div id="main" >
			<%= yield %>
		</div>
	</div>
</body>

</html>
