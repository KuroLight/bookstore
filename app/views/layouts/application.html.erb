<!DOCTYPE html>
<html>
<head>
	<title>Bookstore</title>
	<%= stylesheet_link_tag 	"scaffold" %>
	<%= stylesheet_link_tag		"bookstore", :media => "all" %>
	<%= javascript_include_tag	"application" %>
	<%= csrf_meta_tags %>
</head>

<body id="store" >
	<div id="banner" >
		<%= image_tag("logo.png") %>
		<%= @page_title || "2hand-Bookstore" %>
	</div>
	<div id="columns" >
		<div id="side" >      		
			<a href="http://localhost:3000/" >Home</a><br />
			<a href="http://www.google.com.hk" >Questions</a><br />
			<a href="http://www.weibo.com" >News</a><br />
			<a href="mailto:393323546@qq.com" >Contact</a><br />
			<a href="http://my.ss.sysu.edu.cn/wiki/pages/viewpage.action?pageId=35913895" >About Us</a><br />
			
			<br></br>
			<div id="cart">
				<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
	       				<%= render @cart %>
	       			<% end %>
	       		<% end %>
      		</div>
      		
		</div>
		<div id="main" >
			<%= yield %>
		</div>
	</div>
</body>

</html>
